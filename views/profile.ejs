<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="/CSS/profile.css">
</head>
<body>
    <div class="container">
        <h2>User Profile</h2>
        <div class="profile-details">
            <p><strong>Username:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>

            <% if (userfindresult.length > 0 && userfindresult[0].userProfile.length > 0) { %> <%
                userfindresult[0].userProfile.forEach(profileDetail => { %>
                <p>Address: <%= profileDetail.address %></p>
                <p>Phone: <%= profileDetail.phone %></p>
                <p>State: <%= profileDetail.state %></p>
                <% }); %> <% } else { %>
                <p>No profile details found.</p>
                <% } %>
            <a href="/edit-profile">Edit Profile</a>
        </div>
    </div>
</body>
</html>
